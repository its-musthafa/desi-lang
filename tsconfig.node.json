{
  "compilerOptions": {
    "composite": true, // Required for project references
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo", // Path for incremental build information
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "module": "ESNext", // Specify module code generation
    "moduleResolution": "bundler", // Use bundler-style module resolution
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true, // Enable all strict type-checking options
    "noEmit": false, // Ensure this is set to false to allow emitting files
    "outDir": "./dist", // Specify the output directory for emitted files
    "rootDir": "./", // Specify the root directory of input files
    "declaration": true, // Emit .d.ts declaration files
    "resolveJsonModule": true // Allow importing .json files
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "dist"] // Exclude directories
}
